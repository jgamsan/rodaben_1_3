<% if Spree::Post.all.any? -%>
  <div id="news-container" class="news">
    <ul>
      <% Spree::Post.published.each do |post| -%>
        <li class="new"><%= l post.created_at, :format => '%A, %d%^b%Y, %H:%M' %><br>
        <%= post.title.upcase %><br>
        <%= post.description %></li>
      <% end -%>
    </ul>
  </div>
<% end -%>
