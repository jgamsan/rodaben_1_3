<div class="span9">
  <ul class="breadcrumb">
    <%= breadcrumbs(@taxon) %>
  </ul>
  <div class="row" data-hook="product_show">
    <div class="span9">
      <h1><%= accurate_title %></h1>
    </div>
  </div>
  <hr>

  <div class="row">
    <div class="span3"data-hook="product_images">
      <div id="main-image" data-hook>
        <%= render :partial => 'image' %>
      </div>
      <div id="thumbnails" data-hook>
        <%= render :partial => 'thumbnails', :locals => { :product => @product } %>
      </div>
      <div data-hook="product_properties">
        <%= render :partial => 'properties' %>
      </div>
    </div>

    <div class="span6">

      <div class="span6">
        <address>
          <strong>Brand:</strong> <span><%= @product.taxons.first.name.singularize %></span><br />
          <strong>Product Code:</strong> <span><%= @product.sku %></span><br />
          <strong>Reward Points:</strong> <span>0</span><br />
          <strong>Availability:</strong> <span><%= @product.count_on_hand %></span><br />
        </address>
      </div>

      <div id="cart-form" data-hook="cart_form">
        <%= render :partial => 'cart_form' %>
      </div>
      <div class="span6">
        <p>
        <input name="star1" type="radio" class="star"/>
        <input name="star1" type="radio" class="star"/>
        <input name="star1" type="radio" class="star"/>
        <input name="star1" type="radio" class="star"/>
        <input name="star1" type="radio" class="star"/>&nbsp;&nbsp;
        <a href="#">0 reviews</a>  |  <a href="#">Write a review</a></p>
      </div>
    </div>
  </div>
    <hr>
    <div class="row">
      <div class="span9">
        <div class="tabbable">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#1" data-toggle="tab">Descripcion</a></li>
            <li><a href="#2" data-toggle="tab">Datos Tecnicos</a></li>
            <li><a href="#2" data-toggle="tab">Reviews</a></li>
            <li><a href="#4" data-toggle="tab">Productos Similares</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="1">
              <%= product_description(@product) rescue t(:product_has_no_description) %>
            </div>
            <div class="tab-pane" id="2">
              <%= render :partial => 'spree/products/tires_info' %>
            </div>
            <div class="tab-pane" id="3">
              <p>There are no reviews for this product.</p>
            </div>
            <div class="tab-pane" id="4">
              <ul class="thumbnails related_products">
                <li class="span2">
                  <div class="thumbnail">
                    <a href="product.html"><img alt="" src="http://placehold.it/220x180" /></a>
                    <div class="caption">
                      <a href="product.html"> <h5>iPod Touch</h5></a>  Price: &#36;50.00<br /><br />
                    </div>
                  </div>
                </li>

                <li class="span2">
                  <div class="thumbnail">
                    <a href="product.html"><img alt="" src="http://placehold.it/220x180" /></a>
                    <div class="caption">
                      <a href="product.html"> <h5>iPod Touch</h5></a>  Price: &#36;50.00<br /><br />
                    </div>
                  </div>
                </li>

                <li class="span2">
                  <div class="thumbnail">
                    <a href="product.html"><img alt="" src="http://placehold.it/220x180" /></a>
                    <div class="caption">
                      <a href="product.html"> <h5>iPod Touch</h5></a>  Price: &#36;50.00<br /><br />
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
